<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="custom_purchase_tree_view_id" model="ir.ui.view">
        <field name="name">custom.purchase.tree.view</field>
        <field name="model">custom.purchase</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <!-- Add this reference to the Kanban view -->
    <record id="custom_purchase_kanban_view_id" model="ir.ui.view">
        <field name="name">custom.purchase.kanban.view</field>
        <field name="model">custom.purchase</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="date"/>
                <field name="status"/>
            </kanban>
        </field>
    </record>

    <record id="custom_purchase_tree_action" model="ir.actions.act_window">
        <field name="name">Custom Purchases</field>
        <field name="res_model">custom.purchase</field>
        <field name="view_mode">tree,form,kanban</field> <!-- Add 'kanban' to the view modes -->
        <field name="view_id" ref="custom_purchase_tree_view_id"/>
    </record>

    <menuitem id="menu_custom_purchase" name="Custom Purchases" sequence="20"/>
    <menuitem id="menu_custom_purchase_tree" name="Custom Purchases" parent="menu_custom_purchase" action="custom_purchase_tree_action"/>
</odoo>
